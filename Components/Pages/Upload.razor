@page "/upload"
@rendermode InteractiveServer
@inject BlazorWebApp.Services.FileService FileService
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Upload File</PageTitle>

<h3 class="mb-4">Upload Customer Login Statistics XML File</h3>

<div class="row g-3">
    <div class="col-auto">
        <label class="form-label">Choose existing customer</label>
        <select class="form-select"
        @onchange="OnClientSelected"
        value="@selectedClient">
            <option value="">-- Select customer --</option>
            @foreach (var c in existingClients)
            {
                <option value="@c">@c</option>
            }
        </select>
    </div>
    <div class="col-auto">
        <label class="form-label">Or enter new customer</label>
        <input class="form-control"
        placeholder="New customer name"
        @bind="newClientName"
        @oninput="OnNewClientTyping"
        disabled="@isExistingClientSelected" />
    </div>
</div>

<hr />

<div class="mb-3">
    <label class="form-label">Upload XML File</label>
    <InputFile OnChange="OnFileSelected" accept=".xml" />
</div>

<button class="btn btn-primary"
disabled="@(!canUpload)"
@onclick="UploadConfirm">
    Upload
</button>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-3">@message</div>
}

@code {

    private List<string?> existingClients = [];
    private string selectedClient = "";
    private string newClientName = "";
    private bool isExistingClientSelected = false;

    private IBrowserFile? uploadedFile;
    private string message = "";

    private bool canUpload =>
        uploadedFile != null &&
        (!string.IsNullOrWhiteSpace(selectedClient) ||
         !string.IsNullOrWhiteSpace(newClientName));

    protected override void OnInitialized()
    {
        existingClients = FileService.GetExistingClients();
    }

    // When dropdown changes
    private void OnClientSelected(ChangeEventArgs e)
    {
        selectedClient = e.Value?.ToString() ?? "";
        if (!string.IsNullOrWhiteSpace(selectedClient))
        {
            // Existing customer selected → disable input
            isExistingClientSelected = true;
            newClientName = "";
        }
        else
        {
            isExistingClientSelected = false;
        }
        message = "";
    }

    // When typing in new customer name
    private void OnNewClientTyping(ChangeEventArgs e)
    {
        newClientName = e.Value?.ToString() ?? "";
        if (!string.IsNullOrWhiteSpace(newClientName))
        {
            // user is typing a new name → dropdown reset
            selectedClient = "";
            isExistingClientSelected = false;
        }
        message = "";
    }

    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        uploadedFile = e.File;
        message = "";
    }

    private async Task UploadConfirm()
    {
        string finalCustomerName = !string.IsNullOrWhiteSpace(newClientName) ? newClientName : selectedClient;
        finalCustomerName = finalCustomerName.Trim();

        if (string.IsNullOrWhiteSpace(finalCustomerName))
        {
            message = "Customer name is required.";
            return;
        }
        if (uploadedFile == null)
        {
            message = "Please select an XML file.";
            return;
        }

        await FileService.SaveClientXmlAsync(finalCustomerName, uploadedFile);

        message = $"{uploadedFile.Name} uploaded successfully!";
        // refresh client list if new one was added
        existingClients = FileService.GetExistingClients();
    }
}
