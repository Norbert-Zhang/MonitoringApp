@page "/upload"
@rendermode InteractiveServer
@inject BlazorWebApp.Services.FileService FileService
@using Microsoft.AspNetCore.Components.Forms

<h3>Upload Customer Login Statistics XML File</h3>

<div class="mb-3">
    <label class="form-label">Customer Name</label>

    <select class="form-select w-auto d-inline-block"
    @onchange="OnClientChange">

        <option value="">-- Select customer --</option>

        @foreach (var c in existingClients)
        {
            if (!string.IsNullOrEmpty(c))
            {
                <option value="@c">@c</option>
            }
        }

        <option value="__new__">+ New customer...</option>
    </select>

    @if (isNewClient)
    {
        <input class="form-control mt-2 w-auto"
        placeholder="Enter new customer name"
        @bind="newClientName" />
    }
</div>

<div class="mb-3">
    <label class="form-label">Upload XML File</label>
    <InputFile OnChange="OnFileSelected" accept=".xml" />
</div>

<button class="btn btn-primary"
disabled="@(!canUpload)"
@onclick="UploadConfirm">
    Upload
</button>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-3">@message</div>
}

@code {

    private List<string?> existingClients = new();
    private string selectedClient = "";
    private bool isNewClient = false;
    private string newClientName = "";
    private IBrowserFile? uploadedFile;
    private string message = "";

    private bool canUpload =>
        uploadedFile != null &&
        (!string.IsNullOrWhiteSpace(selectedClient) ||
         !string.IsNullOrWhiteSpace(newClientName));

    protected override void OnInitialized()
    {
        existingClients = FileService.GetExistingClients();
    }

    private void OnClientChange(ChangeEventArgs e)
    {
        selectedClient = e.Value?.ToString() ?? "";
        isNewClient = selectedClient == "__new__";

        if (!isNewClient)
            newClientName = "";
    }


    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        uploadedFile = e.File;
    }

    private async Task UploadConfirm()
    {
        string finalCustomerName = isNewClient ? newClientName : selectedClient;
        finalCustomerName = finalCustomerName.Trim();
        if (string.IsNullOrWhiteSpace(finalCustomerName))
        {
            message = "Customer name is required.";
            return;
        }
        if (uploadedFile == null)
        {
            message = "Please select an XML file.";
            return;
        }

        await FileService.SaveClientXmlAsync(finalCustomerName, uploadedFile);

        message = $"{uploadedFile.Name} uploaded successfully!";
        // refresh client list if new one was added
        existingClients = FileService.GetExistingClients();
    }
}
